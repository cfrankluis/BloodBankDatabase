@model BloodBank.Models.BloodOrder.BloodOrderDetail

<div class="modal-header">
    <h4 class="modal-title">Are you sure you want to delete this</h4>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body">
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.PatientName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PatientName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Amount)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Amount)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.OrderDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.OrderDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.BloodType)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BloodValue)
            </dd>

        </dl>
    </div>

</div>

@using (Html.BeginForm("Delete", "BloodOrder", new { id = Model.ID }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="modal-footer ">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
        <input type="submit" value="Delete" class="btn btn-primary" />
    </div>
}

